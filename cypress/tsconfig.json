{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node16",
      "resolveJsonModule": true,
      "target": "ES2017",
      "module": "CommonJS",
      "types": ["node", "cypress"],
      "lib": ["dom", "ESNext"]
    },
    "include": [
      "lib/**/*.ts",
      "augmentations.d.ts",
      "declarations.d.ts"
    ],
    "exclude": [
      "lib/**/*.test.ts"
    ]
  }